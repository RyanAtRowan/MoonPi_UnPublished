@page
@model Portfolio.Pages.RedBook.EditModel
@{
}

<div class="align-items-center justify-content-center g-5 py-5 mx-0">
    <h2 class="py-2" style="text-align:center">Edit Price</h2>
    <div class="container text-center">
        <div class="row py-4">
            <div class="col  d-flex justify-content-end align-items-center">
                Scroll Image
            </div>
            <div class="col d-flex align-items-center">
                Scroll Name
            </div>
        </div>
        <form method="post">
            <div class="row py-4">
                <div class="col d-flex justify-content-end align-items-center">
                    Old Price: [insert value]
                </div>
                <div class="col d-flex align-items-center">
                    <input asp-for="Scroll.Price" placeholder="New Price" class="form-control" />
                    <span asp-validation-for="Scroll.Price" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
