                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input hidden asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" value="Demo@demo.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input hidden asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" value="Demo123!" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Demo</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>



<script src="~/js/fade-in.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
